            </ui:VisualElement>
        </ui:VisualElement>
        <ui:VisualElement name="container_ScriptEditor" style="width: 70%; flex-grow: 1;">
            <ui:Label text="Event Script:" display-tooltip-when-elided="true" name="lbl_EventScript" style="margin-left: 3px; padding-right: 0; padding-left: 0; margin-top: 0; -unity-font-style: bold;" />
