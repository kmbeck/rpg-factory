        <ui:TextField picking-mode="Ignore" label="Trigger Flag ID:" name="tf_FlagTrigger" max-length="1000" password="false" readonly="false" style="-unity-font-style: bold;" />
        <ui:Toggle label="Parallel:" name="chk_Parallel" style="-unity-font-style: bold;" />
